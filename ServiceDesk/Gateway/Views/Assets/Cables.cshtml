@model IEnumerable<Gateway.Storage.Dtos.CableDto>

@{
    ViewBag.Title = "Cable List";
}

<h2 class="text-center mt-5 mb-4">Cable List</h2>

<div class="container mt-5">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Cable Type</th>
                    <th>Length</th>
                    <th>Connector Type</th>
                    <th>Shielded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cable in Model)
                {
                    <tr>
                        <td>@cable.Name</td>
                        <td>@cable.CableType</td>
                        <td>@cable.Length meters</td>
                        <td>@cable.ConnectorType</td>
                        <td>@cable.IsShielded ? "Yes" : "No"</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@cable.Id" class="btn btn-primary btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>