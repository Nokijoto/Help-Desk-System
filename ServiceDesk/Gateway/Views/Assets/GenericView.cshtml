@model IEnumerable<dynamic>

<div class="container">
<h1 class="text-center mb-4">Assets</h1>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                @foreach (var property in Model.First().GetType().GetProperties())
                {
                    <th>@property.Name</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @foreach (var property in item.GetType().GetProperties())
                    {
                        <td>@property.GetValue(item)</td>
                    }
                    <td>
                        <a asp-action="Details" asp-route-type="@item.Discriminator" asp-route-id="@item.Guid" class="btn btn-info btn-sm">Details</a>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
