@model IEnumerable<dynamic>
@using Gateway.Helpers
<div class="container">
    <h1 class="text-center mb-4">Assets</h1>
    @if (Model != null && Model.Any())
    {
        var excludedProperties = new List<string> { "Id", "Guid", "CreatedAt", "UpdatedAt", "CreatedBy", "UpdatedBy" };
        var modelType = Model.First().GetType();

        <div class="table-container">
            <a asp-action="Create" asp-route-type="@item.Discriminator" class="btn btn-info btn-sm">Utwórz</a>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        @foreach (var property in Model.First().GetType().GetProperties())
                        {
                            @if (!excludedProperties.Contains(property.Name))
                            {
                                <th>@DisplayNameHelper.GetDisplayName(modelType, property.Name)</th>
                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @foreach (var property in item.GetType().GetProperties())
                            {
                                @if (!excludedProperties.Contains(property.Name))
                                {
                                    <td>@property.GetValue(item)</td>
                                }
                            }

                            <td>
                                @if (!string.IsNullOrEmpty(item.Discriminator))
                                {
                                    <a asp-action="Details" asp-route-type="@item.Discriminator" asp-route-id="@item.Guid" class="btn btn-info btn-sm">Szczegóły</a>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@item.Guid" class="btn btn-info btn-sm">Szczegóły</a>
                                }
                            </td>       
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">No assets available.</p>
    }
</div>